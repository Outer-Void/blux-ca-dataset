{
  "id": "dataset.sample_review",
  "name": "Sample Review Generator",
  "type": "tool",
  "description": "Generate deterministic samples for human review.",
  "entrypoint": "python tools/sample_review.py",
  "inputs": [
    {
      "name": "path",
      "type": "str",
      "required": false,
      "description": "Optional data file to sample. Defaults to all domains."
    },
    {
      "name": "n",
      "type": "int",
      "required": false,
      "description": "Number of samples to generate."
    },
    {
      "name": "seed",
      "type": "int",
      "required": false,
      "description": "Seed for deterministic sampling."
    }
  ],
  "outputs": [
    {
      "name": "sample_report",
      "type": "string",
      "description": "Path to generated review markdown."
    }
  ],
  "pillars": ["Responsibility", "Worth"],
  "owner": "blux-ca",
  "version": "0.1",
  "tags": ["dataset", "review"]
}
