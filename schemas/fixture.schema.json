{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cA Fixture Goal",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "summary", "prompt", "version"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^goal_[a-z0-9_]+$"
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "prompt": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "uniqueItems": true
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    },
    "required_profile_id": {
      "type": "string",
      "minLength": 1
    },
    "required_profile_version": {
      "type": "string",
      "minLength": 1
    },
    "device": {
      "type": "string",
      "minLength": 1
    }
  }
}
