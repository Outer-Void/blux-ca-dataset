{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "cA Expected Artifact",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "artifact"],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "artifact": {
      "oneOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["format", "content"],
          "properties": {
            "format": {
              "type": "string",
              "enum": ["text", "json"]
            },
            "content": {
              "type": ["string", "object", "array", "number", "boolean", "null"]
            }
          }
        },
        {
          "type": "null"
        }
      ]
    }
  }
}
